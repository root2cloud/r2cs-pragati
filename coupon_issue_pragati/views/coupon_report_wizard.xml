<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_coupon_report_wizard_form" model="ir.ui.view">
        <field name="name">coupon.report.wizard.form</field>
        <field name="model">coupon.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Coupon Report">
                <sheet>
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="state"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_generate_report" string="Generate PDF Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>