<odoo>
    <record id="ledger_payment_transction_form_inherit" model="ir.ui.view">
        <field name="name">ledger.payment.form.inherit</field>
        <field name="model">ledger.payment</field>
        <field name="inherit_id" ref="gft_inter_account.ledger_payment_transction_form"/>
        <field name="arch" type="xml">

            <button name="action_confirm" position="before">
                <field name="is_approval_user" invisible="1"/>

                <button name="send_for_approval" type="object" string="Submit" class="btn-primary"
                        attrs="{'invisible': [('state','!=','draft')]}"/>

                <button name="approve_bank_receipt" type="object" string="Approve" class="btn-primary"
                        attrs="{'invisible': ['|',('is_approval_user', '==', False),('state','!=','submit')]}"/>
            </button>

            <button name="action_confirm" position="replace">
                <button name="action_confirm" type="object" string="Confirm" class="btn-primary"
                        attrs="{'invisible': [('state','!=','approve')]}"/>
            </button>

            <xpath expr="//sheet/group" position="after">
                <group string="Approvals">
                    <group>
                        <field name="department_id" options="{'no_create': True}"/>
                        <field name="category_id" readonly="1"/>
                        <field name="approve_status" readonly="1"/>
                    </group>

                    <group>
                        <label for="approval_level_1" string="Approver Level 1"/>
                        <div class="o_row">
                            <field name="approval_level_1" readonly="1" force_save="1"/>
                            <field name="l1_done" readonly="1" widget="boolean_toggle"
                                   attrs="{'invisible': [('approval_level_1', '=', False)]}"/>
                        </div>

                        <label for="approval_level_2" string="Approver Level 2"/>
                        <div class="o_row">
                            <field name="approval_level_2" readonly="1" force_save="1"/>
                            <field name="l2_done" readonly="1" widget="boolean_toggle"
                                   attrs="{'invisible': [('approval_level_2', '=', False)]}"/>
                        </div>

                        <label for="approval_level_3" string="Approver Level 3"/>
                        <div class="o_row">
                            <field name="approval_level_3" readonly="1" force_save="1"/>
                            <field name="l3_done" readonly="1" widget="boolean_toggle"
                                   attrs="{'invisible': [('approval_level_3', '=', False)]}"/>
                        </div>
                    </group>
                </group>


            </xpath>

        </field>
    </record>
</odoo>