<odoo>
    <data>
        <!-- Inherit product.product tree view used by Inventory at Date -->
        <record id="view_product_tree_inherit_add_location" model="ir.ui.view">
            <field name="name">product.product.tree.inherit.location</field>
            <field name="model">product.product</field>
            <field name="inherit_id"
                   ref="stock.view_stock_product_tree"/> <!-- or product.product_tree_view depending on use -->
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="location_id"/>
                </field>
            </field>
        </record>

        <record id="view_product_tree_inherit_add_gst" model="ir.ui.view">
            <field name="name">product.product.tree.inherit.gst</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.product_product_stock_tree"/>
            <field name="arch" type="xml">
                <!-- Add Sales Price -->
                <field name="avg_cost" position="before">
                    <field name="lst_price" string="Sales Price"/>
                    <!-- Add SGST Value (₹) -->
                    <field name="sgst_value" string="SGST"/>
                    <!-- Add CGST Value (₹) -->
                    <field name="cgst_value" string="CGST"/>
                    <!-- Add IGST Value (₹) -->
                    <field name="igst_value" string="IGST"/>
                    <!-- Add Total Tax Value (₹) -->
                    <field name="total_tax_value" string="Total Tax"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
