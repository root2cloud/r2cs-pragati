<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_bank_reconciliation" model="ir.actions.report">
        <field name="name">Bank Reconciliation Statement</field>
        <field name="model">bank.reconciliation.console</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">focus_bank_reconciliation.report_bank_reconciliation_doc</field>
        <field name="report_file">focus_bank_reconciliation.report_bank_reconciliation_doc</field>
        <field name="binding_model_id" ref="model_bank_reconciliation_console"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
    </record>

    <template id="report_bank_reconciliation_doc">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="text-center" style="border-bottom: 2px solid black; margin-bottom: 20px;">
                            <h2>Bank Reconciliation Statement</h2>
                            <div class="row mt-2 mb-2">
                                <div class="col-4">
                                    <strong>Bank Journal:</strong>
                                    <span t-field="o.bank_journal_id.name"/>
                                </div>
                                <div class="col-4">
                                    <strong>Date From:</strong>
                                    <span t-field="o.date_from"/>
                                </div>
                                <div class="col-4">
                                    <strong>Date To:</strong>
                                    <span t-field="o.date_to"/>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-4"
                             style="font-size: 0.9em; border: 1px solid #ddd; padding: 10px; background-color: #f9f9f9;">
                            <div class="col-3" style="border-right: 1px solid #ccc;">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Book Balance:</strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        <span t-field="o.book_balance"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                              style="font-weight: bold;"/>
                                    </div>
                                </div>
                                <div class="row mt-1">
                                    <div class="col-6">Opening Bal:</div>
                                    <div class="col-6 text-right">
                                        <span t-field="o.opening_balance"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </div>
                                </div>
                            </div>

                            <div class="col-3" style="border-right: 1px solid #ccc;">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Out Debits:</strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        <span t-field="o.uncleared_debit_amount"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                              style="color: #d9534f; font-weight: bold;"/>
                                    </div>
                                </div>
                                <div class="row mt-1">
                                    <div class="col-6">Debits Count:</div>
                                    <div class="col-6 text-right">
                                        <span t-field="o.uncleared_debit_count"/>
                                    </div>
                                </div>
                            </div>

                            <div class="col-3" style="border-right: 1px solid #ccc;">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Out Credits:</strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        <span t-field="o.uncleared_credit_amount"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                              style="color: #2e6b30; font-weight: bold;"/>
                                    </div>
                                </div>
                                <div class="row mt-1">
                                    <div class="col-6">Credits Count:</div>
                                    <div class="col-6 text-right">
                                        <span t-field="o.uncleared_credit_count"/>
                                    </div>
                                </div>
                            </div>

                            <div class="col-3">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Cleared Bal:</strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        <span t-field="o.cleared_balance"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                              style="color: #2e6b30; font-weight: bold;"/>
                                    </div>
                                </div>
                                <div class="row mt-1">
                                    <div class="col-6">
                                        <strong>Bank Bal:</strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        <span t-field="o.balance_end_real"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </div>
                                </div>
                                <div class="row mt-1" style="border-top: 1px solid #ccc;">
                                    <div class="col-6">
                                        <strong>Diff:</strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        <span t-field="o.unreconciled_variance"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                              t-att-style="'color: red; font-weight: bold;' if o.unreconciled_variance != 0 else 'color: green; font-weight: bold;'"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <table class="table table-sm table-striped table-bordered" style="font-size: 0.8em;">
                            <thead>
                                <tr style="background-color: #f0f0f0;">
                                    <th>#</th>
                                    <th>Status</th>
                                    <th>Clear Date</th>
                                    <th>Doc No</th>
                                    <th>Doc Date</th>
                                    <th class="text-right">Debit</th>
                                    <th class="text-right">Credit</th>
                                    <th>Cheque No</th>
                                    <th>Doc Type</th>
                                    <th>Narration</th>
                                    <th>Account</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.line_ids.sorted(key=lambda r: r.brs_serial_no)" t-as="line">
                                    <td class="text-center">
                                        <span t-field="line.brs_serial_no"/>
                                    </td>

                                    <td class="text-center">
                                        <t t-if="line.is_brs_cleared">
                                            <span class="badge badge-success"
                                                  style="color: green; border: 1px solid green; padding: 2px 5px;">
                                                Cleared
                                            </span>
                                        </t>
                                        <t t-else="">
                                            <span class="badge badge-danger"
                                                  style="color: red; border: 1px solid red; padding: 2px 5px;">Pending
                                            </span>
                                        </t>
                                    </td>

                                    <td>
                                        <span t-field="line.brs_clearance_date"/>
                                    </td>
                                    <td>
                                        <span t-field="line.move_name"/>
                                    </td>
                                    <td>
                                        <span t-field="line.date"/>
                                    </td>

                                    <td class="text-right">
                                        <span t-field="line.debit"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.credit"
                                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>

                                    <td>
                                        <span t-field="line.cheque_number"/>
                                    </td>
                                    <td>
                                        <span t-field="line.brs_document_type"/>
                                    </td>
                                    <td>
                                        <span t-field="line.narration"/>
                                    </td>
                                    <td>
                                        <span t-field="line.brs_counterpart_account"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>