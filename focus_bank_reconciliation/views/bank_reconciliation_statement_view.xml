<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_bank_reconciliation_statement_selection" model="ir.ui.view">
        <field name="name">bank.reconciliation.statement.selection</field>
        <field name="model">bank.reconciliation.statement.view</field>
        <field name="arch" type="xml">
            <form string="Reconciliation Statement">
                <sheet>
                    <div class="oe_title">
                        <h1>Reconciliation Statement</h1>
                    </div>
                    <group>
                        <group string="Configuration">
                            <field name="bank_journal_id" options="{'no_create': True, 'no_open': True}"
                                   widget="selection"/>
                            <field name="date_range_option" widget="selection"/>
                        </group>
                        <group string="Period">
                            <field name="date_from" attrs="{'invisible': [('date_range_option', '=', 'as_on_date')]}"/>

                            <field name="date_to"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <div class="text-center mt-4">
                        <button name="action_load_statement" string="View Statement" type="object" class="btn-primary"
                                icon="fa-arrow-right"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_bank_reconciliation_statement_result" model="ir.ui.view">
        <field name="name">bank.reconciliation.statement.result</field>
        <field name="model">bank.reconciliation.statement.view</field>
        <field name="arch" type="xml">
            <form string="Reconciliation Result" create="0" edit="0">
                <header>
                    <button name="action_reload" string="Reload" type="object" class="btn-primary" icon="fa-refresh"/>
                </header>

                <sheet>
                    <div class="oe_title text-center">
                        <h2>Bank Reconciliation Statement</h2>
                        <h4 class="text-muted">
                            <field name="bank_journal_id" readonly="1" options="{'no_open': True}"/>

                        </h4>
                        <p>
                            From
                            <strong>
                                <field name="date_from" readonly="1"/>
                            </strong>
                            To
                            <strong>
                                <field name="date_to" readonly="1"/>
                            </strong>
                        </p>
                    </div>

                    <hr/>

                    <field name="line_ids" readonly="1">
                        <tree string="Transactions" create="0" delete="0" decoration-bf="is_bold==True">
                            <field name="is_bold" invisible="1"/>
                            <field name="is_balance_row" invisible="1"/>
                            <field name="serial_no" string="#" width="50px"/>
                            <field name="date" string="Date"/>
                            <field name="move_name" string="Voucher"/>
                            <field name="account_name" string="Account"/>

                            <field name="debit" string="Debit" attrs="{'invisible': [('is_balance_row', '=', True)]}"/>
                            <field name="credit" string="Credit"
                                   attrs="{'invisible': [('is_balance_row', '=', True)]}"/>

                            <field name="running_balance" string="Balance" widget="monetary"/>

                            <field name="narration" string="Narration"/>
                            <field name="reconciled_str" string="Reconciled"/>
                        </tree>
                    </field>

                </sheet>
            </form>
        </field>
    </record>
    <record id="action_bank_reconciliation_statement_view" model="ir.actions.act_window">
        <field name="name">Reconciliation Statement</field>
        <field name="res_model">bank.reconciliation.statement.view</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_bank_reconciliation_statement_selection"/>
        <field name="target">current</field>
    </record>


    <menuitem id="menu_bank_reconciliation_statement_view" name="Bank Reconciliation Statement"
              action="action_bank_reconciliation_statement_view" parent="menu_bank_reconciliation_root" sequence="2"/>

</odoo>