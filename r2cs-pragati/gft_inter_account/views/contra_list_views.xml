<odoo>
    <record id="internal_transaction_tree_view_inherit_fields" model="ir.ui.view">
        <field name="name">internal.transaction.tree.view.inherit.fields</field>
        <field name="model">internal.transaction</field>
        <field name="inherit_id" ref="gft_inter_account.internal_transaction_tree"/>
        <field name="arch" type="xml">
            <!-- Add fields after the 'name' field -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="journal_id"/>
                <field name="source_acc"/>
                <field name="dest_acc"/>
                <field name="amount"/>
            </xpath>
        </field>
    </record>
</odoo>