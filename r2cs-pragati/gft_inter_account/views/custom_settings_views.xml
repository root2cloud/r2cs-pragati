<odoo>
    <record id="view_res_config_settings_inherit_mapbox" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.mapbox</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[contains(@class, 'settings')]" position="inside">

                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="map_box_token"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="map_box_token"/>
                        <div class="text-muted">
                            Enter your Mapbox API token to enable map features.
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="group_mrp_wo_tablet_timer"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="group_mrp_wo_tablet_timer"/>
                        <div class="text-muted">
                            Enable the Work Order Timer for manufacturing users.
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="currency_provider"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="currency_provider"/>
                        <div class="text-muted">
                            Select the currency exchange rate provider.
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="currency_interval_unit"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="currency_interval_unit"/>
                        <div class="text-muted">
                            Set the update interval unit for currency rates.
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="currency_next_execution_date"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="currency_next_execution_date"/>
                        <div class="text-muted">
                            Next scheduled execution date for currency updates.
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>
    <!-- Replace or remove this broken action -->
    <record id="action_stock_report" model="ir.actions.act_window">
        <field name="name">Stock Report</field>
        <field name="res_model">stock.picking</field> <!-- use a valid model -->
        <field name="view_mode">tree,form</field>
    </record>

</odoo>