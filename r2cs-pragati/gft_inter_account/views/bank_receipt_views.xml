<odoo>
    <record id="ledger_payment_tree_view_inherit_fields" model="ir.ui.view">
        <field name="name">ledger.payment.tree.view.inherit.fields</field>
        <field name="model">ledger.payment</field>
        <field name="inherit_id" ref="gft_inter_account.ledger_payment_transaction_tree"/>
        <field name="arch" type="xml">
            <!-- Add fields after the 'name' field in the tree view -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="date"/>
                <field name="dest_acc"/>
                <field name="source_acc"/>
                <field name="create_uid"/>
                <field name="company_id"/>
                <field name="create_date"/>
                <field name="amount"/>
                <field name="state"/>
            </xpath>
        </field>
    </record>
</odoo>