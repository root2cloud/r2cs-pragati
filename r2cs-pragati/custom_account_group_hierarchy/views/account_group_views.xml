<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_account_form_inherit" model="ir.ui.view">
        <field name="name">account.account.form.inherit.subsubgroup</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='account_type']" position="after">
                <field name="main_group"/>
                <field name="sub_group"/>
                <field name="sub_sub_group"/>

            </xpath>
        </field>
    </record>

    <record id="view_account_account_list_inherit" model="ir.ui.view">
        <field name="name">account.account.form.inherit.subsubgroup</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_list"/>
        <field name="arch" type="xml">
            
         
            <xpath expr="//field[@name='name']" position="after">
                <field name="main_group"/>
                <field name="sub_group"/>
                <field name="sub_sub_group"/>
            </xpath>

        </field>
    </record>

</odoo>

