<odoo>
    <record id="view_mrp_production_form_inherit_quality" model="ir.ui.view">
        <field name="name">mrp.production.form.inherit.quality</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]" position="inside">
                <field name="quality_check_fail"/>
                <field name ="check_ids"/>
                <field name = "quality_check_todo"/>
                <field name = "quality_alert_count"/>
                <field name = "manufacturing_date"/>
                <field name = "expired_date"/>
                <field name = "total_quantity"/>
                <field name = "product_quantity_loss"/>
            </xpath>
        </field>
    </record>
</odoo>
