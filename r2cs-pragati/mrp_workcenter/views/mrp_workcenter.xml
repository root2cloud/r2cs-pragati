<odoo>
    <!-- Custom standalone form view -->
    <record id="view_mrp_workcenter_custom_form" model="ir.ui.view">
        <field name="name">mrp.workcenter.custom.form</field>
        <field name="model">mrp.workcenter</field>
        <field name="arch" type="xml">
            <form string="Custom Workcenter">
                <sheet>
                    <group>
                        <field name="cost_employee_id"/>
                        <field name="cost_employee_id"/>
                        <field name="allow_employee"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Custom standalone tree view -->
    <record id="view_mrp_workcenter_custom_tree" model="ir.ui.view">
        <field name="name">mrp.workcenter.custom.tree</field>
        <field name="model">mrp.workcenter</field>
        <field name="arch" type="xml">
            <tree string="Custom Workcenter">
                <field name="cost_employee_id"/>
                <field name="employee_costs_hour"/>
                <field name="allow_employee"/>
            </tree>
        </field>
    </record>

    <!-- Custom action -->
    <record id="action_mrp_workcenter_custom" model="ir.actions.act_window">
        <field name="name">Custom Workcenter</field>
        <field name="res_model">mrp.workcenter</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_mrp_workcenter_custom_tree"/>
    </record>

    <!-- Custom menu -->
    <menuitem id="menu_mrp_workcenter_custom_root" name="Custom Workcenter" sequence="1000"/>
    <menuitem id="menu_mrp_workcenter_custom_manage"
              name="Manage Workcenters"
              parent="menu_mrp_workcenter_custom_root"
              action="action_mrp_workcenter_custom"
              sequence="10"/>
</odoo>
