<?xml version='1.0' encoding='UTF-8'?>

<odoo>
    <data>
        <!-- NEW Complete CASH Receipt Template with exact UI -->
        <record id="new_cash_receipt_complete_view" model="ir.ui.view" context="{'studio': True}">
            <field name="active" eval="True"/>
            <field name="arch" type="xml">
                <t t-name="pragati_custom_module.new_cash_receipt_complete_template">
                    <t t-call="web.html_container">
                        <t t-foreach="docs" t-as="o">
                            <t t-call="web.external_layout">
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <style>
                                    .bordered-box { border: 2px solid #000; padding: 20px; margin: 20px; height: 100%; }
                                    .centered-heading { text-align: center; margin-bottom: 20px; }
                                    .table-top{ margin-top:40px; }
                                    .table-ar th, .table-ar td { border: 1px solid black; padding: 8px; }
                                    .amount-in-box{ border: 2px solid #000; padding: 120px; margin: 50px; display: flex;
                                    margin-top: 20px; margin-bottom:100px; justify-content: center; align-items: center;
                                    height: 50px; width: 200px; font-weight: bold; font-size: 16px; text-align: center;
                                    }
                                </style>
                                <div class="page bordered-box">
                                    <h3 class="centered-heading">
                                        <strong>CASH RECEIPT</strong>
                                    </h3>
                                    <div class="mb-25 mt-3">
                                        <div class="row">
                                            <div class="col-6" t-if="o.journal_id">
                                                <strong>From Bank:</strong>
                                                <span t-field="o.journal_id.name"/>
                                            </div>
                                            <div class="col-6" t-if="o.date">
                                                <strong>Payment Date:</strong>
                                                <span t-field="o.date"/>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6" t-if="o.partner_id">
                                                <strong>Received From:</strong>
                                                <span t-field="o.partner_id.name"/>
                                            </div>
                                            <div class="col-6" t-if="o.payment_method_id">
                                                <strong>Receipt Number:</strong>
                                                <span t-field="o.name"/>
                                            </div>
                                        </div>
                                        <table class="table table-ar table-top" style="border: 2px solid black;">
                                            <thead>
                                                <tr>
                                                    <td>Vendor Name</td>
                                                    <td>Reference</td>
                                                    <td>Amount</td>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>
                                                        <t t-if="o.partner_id.name"/>
                                                        <t t-esc="o.partner_id.name"/>
                                                    </td>
                                                    <td>
                                                        <t t-if="o.ref"/>
                                                        <t t-esc="o.ref"/>
                                                    </td>
                                                    <td>
                                                        <t t-if="o.amount"/>
                                                        <t t-esc="o.amount"/>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        <div class="bottom-section">
                                            <div class="amount-in-box row">
                                                <p class="rupees">Rs.</p>
                                                <p>
                                                    <span>
                                                        <t t-if="o.amount"/>
                                                    </span>
                                                    <span>
                                                        <t t-esc="o.amount"/>
                                                    </span>
                                                </p>
                                            </div>
                                            <div class="row mt-3">
                                                <div class="col-4">
                                                    <strong>Prepared By:</strong>
                                                </div>
                                                <div class="col-4">
                                                    <strong>Checked By:</strong>
                                                </div>
                                                <div class="col-4">
                                                    <strong>Authorized By:</strong>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </t>
                    </t>
                </t>
            </field>
            <field name="field_parent" eval="False"/>
            <field name="groups_id" eval="[(6, 0, [])]"/>
            <field name="inherit_id" eval="False"/>
            <field name="key">pragati_custom_module.new_cash_receipt_complete_template</field>
            <field name="mode">primary</field>
            <field name="model" eval="False"/>
            <field name="name">New Complete CASH Receipt Template</field>
            <field name="priority">16</field>
            <field name="type">qweb</field>
        </record>

