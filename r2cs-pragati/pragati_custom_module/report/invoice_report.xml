<odoo>
    <template id="report_invoice_document_inherit_message" inherit_id="account.report_invoice_document">

        <!-- Insert after payment_communication -->
        <xpath expr="//p[@name='payment_communication']" position="after">
            <div class="row mt16">
                <div class="col-12">
                    <h1>Note</h1>
                    <strong>Dear Beloved Customers,</strong>
                    <br/>
                    GST benefit passed to customers; MRPs unchanged for stock manufactured before
                    <strong>22nd September 2025</strong>.
                </div>
            </div>
        </xpath>
    </template>
</odoo>