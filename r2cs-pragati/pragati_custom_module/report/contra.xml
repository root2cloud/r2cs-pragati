<odoo>
    <template id="internal_transaction_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <style>
                        .bordered-box {
                            border: 2px solid #000;
                            padding: 20px;
                            margin-top: 20px;
                        }
                        .centered-heading {
                            text-align: center;
                            margin-bottom: 20px;
                            font-size: 20px;
                            font-weight: bold;
                            text-transform: uppercase;
                        }
                        .table-ar th, .table-ar td {
                            border: 1px solid black;
                            padding: 8px;
                            font-size: 12px;
                        }
                        .amount-in-box {
                            border: 2px solid #000;
                            padding: 10px;
                            width: 200px;
                            text-align: center;
                            font-weight: bold;
                            margin-top: 10px;
                        }
                        .footer-signatures {
                            margin-top: 30px;
                            font-size: 12px;
                        }
                        .footer-signatures .col {
                            width: 25%;
                            display: inline-block;
                        }
                        .company-footer {
                            margin-top: 20px;
                            font-size: 12px;
                            text-align: center;
                        }
                        .logo-box {
                            text-align: center;
                            margin-bottom: 10px;
                        }
                        .logo-box img {
                            max-height: 80px;
                        }
                    </style>

                    <div class="bordered-box">
                        <!-- Company Logo -->
<!--                        <div class="logo-box">-->
<!--                            <img t-if="o.company_id.logo"-->
<!--                                 t-att-src="'data:image/png;base64,%s' % o.company_id.logo.decode()"-->
<!--                                 alt="Company Logo"/>-->
<!--                        </div>-->

                        <h3 class="centered-heading">CONTRA VOUCHER</h3>

                        <div class="row">
                            <div class="col-6">
                                <strong>From Bank: </strong>
                                <span t-field="o.source_acc"/>
                            </div>
                            <div class="col-6">
                                <strong>Payment Date: </strong>
                                <span t-field="o.date"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <strong>Receipt Number: </strong>
                                <span t-field="o.name"/>
                            </div>
                        </div>

                        <table class="table table-ar" style="margin-top:20px; border: 2px solid black;">
                            <thead>
                                <tr>
                                    <th>Journal Name</th>
                                    <th>Display Name</th>
                                    <th>Date</th>
                                    <th>Debit</th>
                                    <th>Credit</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- From Account -->
                                <tr>
                                    <td><span t-field="o.source_acc"/></td>
                                    <td><span t-field="o.journal_id.name"/></td>
                                    <td><span t-field="o.date"/></td>
                                    <td>₹ 0.00</td>
                                    <td><t t-esc="o.amount"/></td>
                                </tr>
                                <!-- To Account -->
                                <tr>
                                    <td><span t-field="o.dest_acc"/></td>
                                    <td><span t-field="o.journal_id.name"/></td>
                                    <td><span t-field="o.date"/></td>
                                    <td><t t-esc="o.amount"/></td>
                                    <td>₹ 0.00</td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="amount-in-box">
                            Rs. <t t-esc="o.amount"/>
                        </div>

                        <div class="footer-signatures">
                            <div class="col"><strong>Prepared By:</strong></div>
                            <div class="col"><strong>Checked By:</strong></div>
                            <div class="col"><strong>Authorized By:</strong></div>
                        </div>

                        <div class="company-footer">
                            <div><strong><span t-field="o.company_id.name"/></strong></div>
                            <div><span t-field="o.company_id.street"/> <span t-field="o.company_id.street2"/></div>
                            <div><span t-field="o.company_id.city"/>, <span t-field="o.company_id.state_id.name"/> <span t-field="o.company_id.zip"/></div>
                            <div>GSTIN : <span t-field="o.company_id.vat"/></div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_internal_transaction_report" model="ir.actions.report">
        <field name="name">Internal Transaction Report</field>
        <field name="model">internal.transaction</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">pragati_custom_module.internal_transaction_report_template</field>
        <field name="report_file">pragati_custom_module.internal_transaction_report_template</field>
        <field name="binding_type">report</field>
        <field name="binding_model_id" search="[('model', '=', 'internal.transaction')]"/>
    </record>
</odoo>




























