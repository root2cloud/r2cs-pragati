<odoo>
    <template id="report_stock_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="text-center">
                        <h1>
                            <u>
                                <em>Stock Report</em>
                            </u>
                        </h1>
                    </div>

                    <!-- Report Information Table -->

                    <div>
                        <table class="table .table-striped .table-bordered">
                            <thead>
                                <tr class="font-weight-bold bg-light" style="font-size:16px;">
                                    <td>Warehouse</td>
                                    <td class="text-center">
                                        <t t-esc="report_company_id"/>
                                    </td>
                                </tr>
                                <tr class="font-weight-bold bg-light" style="font-size:16px;">
                                    <td>Location</td>
                                    <td class="text-center">
                                        <t t-esc="report_location"/>
                                    </td>
                                </tr>
                                <tr class="font-weight-bold bg-light" style="font-size:16px;">
                                    <td>Date From</td>
                                    <td class="text-center">
                                        <t t-esc="report_start_date"/>
                                    </td>
                                </tr>
                                <tr class="font-weight-bold bg-light" style="font-size:16px;">
                                    <td>To Date</td>
                                    <td class="text-center">
                                        <t t-esc="report_end_date"/>
                                    </td>
                                </tr>
                            </thead>
                        </table>
                    </div>

                    <!-- Stock Report Table -->
                    <div>
                        <table class="table table-bordered">
                            <thead>
                                <tr class="font-weight-bold bg-light" style="font-size:16px;">
                                    <th name="reference" class="text-left">Reference</th>
                                    <th name="designation" class="text-right">Designation</th>
                                    <th name="uom" class="text-right">UoM</th>
                                    <th name="initial" class="text-right">Initial Stock</th>
                                    <th name="in" class="text-right">In</th>
                                    <th name="out" class="text-right">Out</th>
                                    <th name="balance" class="text-right">Balance</th>
                                    <th name="value" class="text-right">Value</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Group by Category Section -->
                                <t t-if="search_record_grouped">
                                    <t t-foreach="search_record_grouped" t-as="element">
                                        <tr>
                                            <th colspan="8" class="text-center bg-secondary text-white"
                                                style="font-size:17px;">
                                                Category:
                                                <t t-esc="element"/>
                                            </th>
                                        </tr>
                                        <t t-foreach="search_record_grouped[element]" t-as="line">
                                            <tr t-att-class="'font-weight-bold o_line_section'">
                                                <td name="reference" style="font-size:14px;">
                                                    <span t-esc="line['default_code']"/>
                                                </td>
                                                <td name="designation" class="text-right" style="font-size:14px;">
                                                    <span t-esc="line['product']"/>
                                                </td>
                                                <td name="uom" class="text-right" style="font-size:14px;">
                                                    <span t-esc="line['uom']"/>
                                                </td>
                                                <td name="initial_stock" class="text-right" style="font-size:14px;">
                                                    <span t-esc="line['initial_stock']"/>
                                                </td>
                                                <td name="in" class="text-right" style="font-size:14px;">
                                                    <span t-esc="line['in']"/>
                                                </td>
                                                <td name="out" class="text-right" style="font-size:14px;">
                                                    <span t-esc="line['out']"/>
                                                </td>
                                                <td name="balance" class="text-right" style="font-size:14px;">
                                                    <span t-esc="line['balance']"/>
                                                </td>
                                                <td name="value" class="text-right" style="font-size:14px;">
                                                    <span t-esc="line['value']"/>
                                                </td>
                                            </tr>
                                        </t>

                                        <!-- Category Subtotal Row -->
                                        <tr class="font-weight-bold bg-info text-white">
                                            <td colspan="3" class="text-right" style="font-size:14px;">
                                                <strong>Category Subtotal:</strong>
                                            </td>
                                            <td class="text-right" style="font-size:14px;">
                                                <strong t-esc="category_totals[element]['initial_stock']"/>
                                            </td>
                                            <td class="text-right" style="font-size:14px;">
                                                <strong t-esc="category_totals[element]['in']"/>
                                            </td>
                                            <td class="text-right" style="font-size:14px;">
                                                <strong t-esc="category_totals[element]['out']"/>
                                            </td>
                                            <td class="text-right" style="font-size:14px;">
                                                <strong t-esc="category_totals[element]['balance']"/>
                                            </td>
                                            <td class="text-right" style="font-size:14px;">
                                                <strong t-esc="category_totals[element]['value']"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>

                                <!-- Non-grouped Section -->
                                <t t-if="search_record">
                                    <t t-foreach="search_record" t-as="dec">
                                        <tr t-att-class="'font-weight-bold o_line_section'">
                                            <td name="reference" style="font-size:14px;">
                                                <span t-esc="dec['default_code']"/>
                                            </td>
                                            <td name="designation" class="text-right" style="font-size:14px;">
                                                <span t-esc="dec['product']"/>
                                            </td>
                                            <td name="uom" class="text-right" style="font-size:14px;">
                                                <span t-esc="dec['uom']"/>
                                            </td>
                                            <td name="initial_stock" class="text-right" style="font-size:14px;">
                                                <span t-esc="dec['initial_stock']"/>
                                            </td>
                                            <td name="in" class="text-right" style="font-size:14px;">
                                                <span t-esc="dec['in']"/>
                                            </td>
                                            <td name="out" class="text-right" style="font-size:14px;">
                                                <span t-esc="dec['out']"/>
                                            </td>
                                            <td name="balance" class="text-right" style="font-size:14px;">
                                                <span t-esc="dec['balance']"/>
                                            </td>
                                            <td name="value" class="text-right" style="font-size:14px;">
                                                <span t-esc="dec['value']"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>

                                <!-- Grand Total Row -->
                                <tr class="font-weight-bold bg-success text-white" style="font-size:16px;">
                                    <td colspan="3" class="text-right">
                                        <strong>GRAND TOTAL:</strong>
                                    </td>
                                    <td class="text-right">
                                        <strong t-esc="total_initial_stock"/>
                                    </td>
                                    <td class="text-right">
                                        <strong t-esc="total_in"/>
                                    </td>
                                    <td class="text-right">
                                        <strong t-esc="total_out"/>
                                    </td>
                                    <td class="text-right">
                                        <strong t-esc="total_balance"/>
                                    </td>
                                    <td class="text-right">
                                        <strong t-esc="total_value"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>

</odoo>